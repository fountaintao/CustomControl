<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SlideBar">
        <!--Select the effect-->
        <attr name="specialEffect">
            <enum name="none" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <!--DataSource-->
        <attr name="data" format="string" />
        <!--standard source-->
        <attr name="standard" format="string" />
        <!--The background color of the selected time-->
        <attr name="chooseColor" format="color" />
        <!--Unselected background color-->
        <attr name="unChooseColor" format="color" />
        <!--The font color of the selected time-->
        <attr name="chooseTextColor" format="color" />
        <!--The color of the unselected font-->
        <attr name="unChooseTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <!--The way the picture is displayed-->
        <attr name="imageMode">
            <!--Don't make any changes-->
            <enum name="none" value="0" />
            <!--Shows a rounded rectangle-->
            <enum name="roundRect" value="1" />
            <!--It's going to be a circle-->
            <enum name="circle" value="2" />
            <!--Display as an ellipse-->
            <enum name="oval" value="3" />
        </attr>
        <!--Injection mode of boundary layer-->
        <attr name="borderMode">
            <!--Cover the boundary of the image-->
            <enum name="cover" value="0" />
            <!--Add width to the image-->
            <enum name="append" value="1" />
            <!--Subtract the width from the image-->
            <enum name="subtract" value="2" />
        </attr>
        <!--Width of boundary-->
        <attr name="borderWidth" format="dimension" />
        <!--Color of boundary-->
        <attr name="borderColor" format="color" />
        <!--The round Angle of the rounded rectangle-->
        <attr name="radius" format="dimension" />
        <!--The round Angle of the rounded rectangle , The upper left corner-->
        <attr name="upperLeftRadius" format="dimension" />
        <!--The round Angle of the rounded rectangle , The upper right corner-->
        <attr name="upperRightRadius" format="dimension" />
        <!--The round Angle of the rounded rectangle , The lower right corner-->
        <attr name="lowerRightRadius" format="dimension" />
        <!--The round Angle of the rounded rectangle , The lower left corner-->
        <attr name="lowerLeftRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MultiLineTextView">

    </declare-styleable>

</resources>