<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="0dp"
            app:imageMode="oval" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="8dp"
            app:imageMode="oval" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="append"
            app:borderWidth="8dp"
            app:imageMode="oval" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="subtract"
            app:borderWidth="8dp"
            app:imageMode="oval" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="0dp"
            app:imageMode="circle" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="8dp"
            app:imageMode="circle" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="append"
            app:borderWidth="8dp"
            app:imageMode="circle" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="subtract"
            app:borderWidth="8dp"
            app:imageMode="circle" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="8dp"
            app:imageMode="roundRect"
            app:lowerRightRadius="100000dp"
            app:upperLeftRadius="100000dp" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="8dp"
            app:imageMode="roundRect" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="append"
            app:borderWidth="8dp"
            app:imageMode="roundRect"
            app:lowerLeftRadius="20dp"
            app:lowerRightRadius="12dp"
            app:upperLeftRadius="8dp"
            app:upperRightRadius="16dp" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="subtract"
            app:borderWidth="8dp"
            app:imageMode="roundRect"
            app:radius="35dp" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="0dp"
            app:imageMode="none" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="cover"
            app:borderWidth="8dp"
            app:imageMode="none" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="append"
            app:borderWidth="8dp"
            app:imageMode="none" />

        <com.taoyong.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/love"
            app:borderColor="@color/color64ff0000"
            app:borderMode="subtract"
            app:borderWidth="8dp"
            app:imageMode="none" />

    </LinearLayout>

</ScrollView>


