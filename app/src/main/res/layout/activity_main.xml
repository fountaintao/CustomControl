<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <com.taoyong.widget.combination.DelInputView
            android:id="@+id/delInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="10dp" />

        <com.taoyong.widget.combination.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/test_roundImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试RoundImageView" />

        <Button
            android:id="@+id/test_slidebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试Slidebar" />

        <com.taoyong.widget.CustomTextView
            android:id="@+id/customTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            app:text="1995"
            app:textColor="@android:color/holo_green_dark"
            app:textSize="20sp" />

        <com.taoyong.widget.MultiLineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_dc"
            android:padding="8dp" />

        <com.taoyong.widget.VolumeView
            android:id="@+id/volumeView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            app:borderWidth="15dp"
            app:chooseColor="@color/color64ff0000"
            app:currentVolume="1"
            app:incomplete="true"
            app:intervalAngle="3"
            app:sumVolume="16"
            app:unChooseColor="@color/color_dc" />

    </LinearLayout>
</ScrollView>
